<h1>Listing Clients</h1>

<div class="Clients Index">
	<%= link_to("Add New Client", "#" , :class => 'action new')%>
	<table class ="Listing">
		<tr class = "header">
			<!-- <td>&nbsp;</td> -->
			<td>Name</td>
			<td>Address</td>
			<td>Designation</td>
		</tr>
		<% @clients.each do |client| %>
		<tr>
			<td><%=client.name%></td>
			<td><%=client.address%></td>
			<td><%=client.designation%></td>
			<td class = "action">
				<%= link_to("Show", {:action => 'show' , :id =>client.id} , :class => 'action show')%>
				<%= link_to("Update","#" , :class => 'action update')%>
				<%= link_to("Delete", "#" , :class => 'action show')%>
			</td>
		</tr>
		<%end%>
	</table>

</div>


			
		


